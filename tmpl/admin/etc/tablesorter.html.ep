<script src="/js/jquery.dataTables.min.js"></script><script type="text/javascript">	$.fn.dataTableExt.afnSortData['data-sort'] = function(oSettings, iColumn) {		var aData = [];		$('td:eq('+iColumn+')', oSettings.oApi._fnGetTrNodes(oSettings)).each(function() {			aData.push($(this).attr('data-sort'));		} );		return aData;	}</script>